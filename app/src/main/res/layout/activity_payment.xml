<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/l1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#A7104A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/headtopicon"
        app:titleMarginStart="130dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Page"
            android:padding="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/aclonica"
            android:textColor="@color/blackcolor"
            android:textSize="18sp"
            />
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"

            android:text="x Travelling"
            android:textColor="#0C682E"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"

            android:text="We provide Secure Payment options"
            android:textColor="@color/blackcolor" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:background="@mipmap/upilogo">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/upilogo" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <EditText
            android:id="@+id/amount_et"
            android:layout_width="wrap_content"
            android:textColor="@color/whitecolor"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/whitecolor"
            android:fontFamily="@font/aclonica"
            android:ems="15"
            android:background="@drawable/custombtn"
            android:gravity="center"
            android:inputType="textPersonName"
            android:hint="Total Amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/name_et"
            android:layout_width="wrap_content"
            android:textColor="@color/whitecolor"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/whitecolor"
            android:fontFamily="@font/aclonica"
            android:ems="15"
            android:background="@drawable/custombtn"
            android:gravity="center"
            android:inputType="text"
            android:hint="Your Name"/>

        <EditText
            android:id="@+id/note_et"
            android:layout_width="wrap_content"
            android:ems="15"
            android:textColor="@color/whitecolor"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custombtn"
            android:textColorHint="@color/whitecolor"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:inputType="textPersonName"
            android:hint="Any Message" />

        <EditText
            android:id="@+id/upi_id"
            android:layout_width="wrap_content"

            android:ems="15"
            android:background="@drawable/custombtn"
            android:textColor="@color/whitecolor"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/whitecolor"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:inputType="textPersonName"
            android:hint="upi ID"
            />

        <Button

            android:id="@+id/send"
            android:layout_width="180dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custombtn"
            android:textColor="@color/whitecolor"
            android:fontFamily="@font/aclonica"
            android:padding="10dp"
            android:textSize="10sp"
            android:text="Proceed Transaction" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>